

	<h2>Sign up</h2>

	<%= form_for(resource.new(), :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="registration"><%= f.email_field :email, :class => "registration_field", :placeholder => "Email" %></div>

	  <div class="registration"><%= f.password_field :password, :class => "registration_field", :placeholder => "Password" %></div>

	  <div class="registration">
	  <%= f.password_field :password_confirmation, :class => "registration_field", :placeholder => "Confirm Password"%></div>

	  <div><%= f.submit "Sign up", :class => "registration_button" %></div>
	  <div class="agree_to_terms">
		  <%= label_tag :agree, "I agree to the terms and conditions" %>:
		  <%= check_box_tag :agree %> <br />
	  </div>
	<% end %>




