<div class="sign_in_partial">

	<h2>Sign in</h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

	  <div class="registration"><%= f.email_field :email, :class => "authentification_field", :placeholder => "Email"%></div>

	  <div class="registration"><br />
	  <%= f.password_field :password, :class => "authentification_field", :placeholder => "Password"%></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me, :class => "remember_me" %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in", :class => "authentification_button" %></div>
	<% end %>

	<%= render "devise/shared/links" %>

</div>
