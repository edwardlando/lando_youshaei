<div class="welcome_message">
    <%= link_to image_tag("logo.png", :class => "logo"),
                { :controller => "store", :action => "index" } %>
    <h2> A PRODUCT OF THE APPAREL GENOME PROJECT </h2>
    <br/> 
</div>
<div class="new_session">
        <h2>Sign up</h2>
        <div class="authentication_options">
            <div class="oauth">
                <div class="facebook_login">
                 <%= link_to image_tag("Facebook_button.png"), user_omniauth_authorize_path(:facebook), :class => "facebook_button_auth" %>
                </div>
                <div class="twitter_login">
                 <%= link_to image_tag("Twitter_button.png"), user_omniauth_authorize_path(:twitter), :class => "twitter_button_auth.png" %>
                </div>
            </div>
            <div class="verticalLine"></div>
            <div class="email">
                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                    <div>
                        <%= f.email_field :email, :class => "registration_field", :placeholder => "Email" %>
                    </div>
                    <div>
                        <%= f.password_field :password, :class => "registration_field", :placeholder => "Password" %>
                    </div>
                    <div>
                        <%= f.password_field :password_confirmation, :class => "registration_field", :placeholder => "Confirm Password"%>
                    </div>
                    <div>
                        <%= f.submit "Sign up", :class => "registration_button" %>
                    </div>
                    <div class="agree_to_terms">
                        By signing up, you agree to our <%= link_to "terms", :controller => "static_pages", :action => "terms" %>
                         and <%= link_to "privacy policy", :controller => "static_pages", :action => "privacy" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>

