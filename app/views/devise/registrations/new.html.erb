<div class="welcome_message">
	<h1><%= link_to "AVEECE", root_path %></h1>
	<h2> the best way to discover and buy clothes </h2>
	<br/> 
</div>

<div class="splashpage_flourish"><%= image_tag('splashpage_flourish.png') %></div>

<div class="sign_up_partial">
<h2>Sign up</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="registration"><%= f.email_field :email, :class => "registration_field", :placeholder => "Email" %></div>

  <div class="registration"><%= f.password_field :password, :class => "registration_field", :placeholder => "Password" %></div>

  <div class="registration">
  <%= f.password_field :password_confirmation, :class => "registration_field", :placeholder => "Confirm Password"%></div>

  <div><%= f.submit "Sign up", :class => "registration_button" %></div>
  <div class="agree_to_terms">
  	<%= f.check_box :terms %>
  	<%= f.label "I agree to the terms and conditions" %>
  </div>
<% end %>
