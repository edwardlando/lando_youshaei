<div class="order_confirmation_form">
  <% if current_user.role == "standard" %>
    Thank you for submitting your order. We'll get back to you soon to confirm the items and prices.
  <% elsif current_user.role == "admin" %>

    <p>Order Id: <%= @order.id %></p>
    <p>Customer: <%= @order.user.email %> </p>
    <p>Address: <%= @order.address %> </p>
      
      <p> Items ordered: </p> 
      <ul>
    <% @order.line_items.each do |item| %>
      <li> Original URL: <%= link_to item.current_url, item.current_url %> </li>
      <li> Item name: <%= item.name %> </li> <br/> <br/>
    <% end %>
      </ul>

      <!-- going to confirm items and amounts with users --> 

      <%= form_for(@confirmation) do |f| %>
      <% if @confirmation.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@confirmation.errors.count, "error") %> prohibited this confirmation from being saved:</h2>

        <ul>
        <% @confirmation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

     <%= f.hidden_field :user_id, @user.id %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :address %><br />
      <%= f.text_area :address %>
    </div>
    <div class="field">
      <%= f.label :user_id %><br />
      <%= f.number_field :user_id %>
    </div>
    <div class="field">
      <%= f.label :total %><br />
      <%= f.text_field :total %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>



  <% end %>

</div>