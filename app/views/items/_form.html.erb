    <%= f.label :color, "Color" %><br />
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :style, "Style" %><br />
    <%= f.text_field :style %>
  </div>
  <div class="field">
    <%= f.label :price, "Price" %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :gender, "Gender" %><br />
    <%= f.text_field :gender %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
