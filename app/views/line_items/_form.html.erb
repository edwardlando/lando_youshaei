
<%= form_for(LineItem.new) do |f| %>
  <h2 class="create_line_item_text">
    Please enter the name and size of the item you'd like to add to your cart <br/> so we can find it when we buy it for you!
  </h2>

  <div class="fields_for_line_items">
    <div class="field">
      <%= f.label :name, "Exact name of the item", :class => "create_line_item_text" %><br />
      <%= f.text_field :name, :id => "line_item_name" %>
    </div>
    <div class="field">
      <%= f.label :size, :class => "create_line_item_text" %><br />
      <%= f.text_field :size, :id => "line_item_size" %>
    </div>
  </div>
    <div class="actions">
      <%= f.submit "Add Item to cart", :class => "make_line_item" %>
   </div>
<% end %>


