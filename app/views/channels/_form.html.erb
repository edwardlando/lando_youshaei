  <%= form_for(Channel.new) do |f| %>
    <ul id="channel_form">
      <li class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, :placeholder => "Name your channel!" %>    
      </li>
      <li class="field">
        <%= f.label :color %><br />
        <%= f.select(:color, Channel::COLOR_OPTIONS) %>
        <div class="selected">
          <div id="picker">
            <% Channel::COLOR_OPTIONS.each do |color| %>
           <div class="option" id="<%=color%>"></div>
          <% end %>
        </div>
        </div>
      </li>
      <li class="field">
        <%= f.label :style %><br />
        <%= f.select(:style, Channel::STYLE_OPTIONS) %>   
      </li>
      <li class="field">
        <%= f.label :price %><br />
        <%= f.select(:price, Channel::PRICE_OPTIONS) %>   
      </li>
      <li class="field">
        <%= f.label :gender %><br />
        <%= f.select(:gender, Channel::GENDER_OPTIONS) %>  
      </li>
      <li class="actions">
        <%= f.submit "Create channel" %>
      </li>
   </ul>
  <% end %>


