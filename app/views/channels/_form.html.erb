  <%= form_for(Channel.new, :remote => true) do |f| %>
    <ul id="channel_form">
      <li class="field">
        <%= f.label :name, "Channel Name" %><br />
        <%= f.text_field :name, :placeholder => "Uber cool preppy" %>    
      </li>
      <li class="field">
        <%= f.label :color %><br />
        <%= f.select(:color, Channel::COLOR_OPTIONS) %>
        <div class="picker">
            <% Channel::COLOR_OPTIONS.each do |color| %>
           <div class="option" id="Color<%=color%>"></div>
          <% end %>
        </div>
      </li> 
      <li class="field">
        <%= f.label :style %><br />
        <%= f.select(:style, Channel::STYLE_OPTIONS) %>   
        <div class="picker" id="style_picker">
            <% Channel::STYLE_OPTIONS.each do |style| %>
           <div class="option" id="Style<%=style%>"> <%= style %> </div>
          <% end %>
        </div>
      </li>
      <li class="field">
        <%= f.label :price, "Price limit" %><br />
        <%= f.select(:price, Channel::PRICE_OPTIONS) %>  
        <div class="picker">
            <% Channel::PRICE_OPTIONS.each do |price| %>
           <div class="option" id="Under<%=price%>"> <%= price %> </div>
          <% end %>
        </div> 
      </li>
      <li class="field">
        <%= f.label :gender %><br />
        <%= f.select(:gender, Channel::GENDER_OPTIONS) %>  
        <div class="picker">
            <% Channel::GENDER_OPTIONS.each do |gender| %>
           <div class="option" id="<%=gender%>"> <%= gender %> </div>
          <% end %>
        </div> 
      </li>
   </ul>
   <div class="actions">
      <%= f.submit "Create this channel", :id => "make_channel" %>
   </div>
  <% end %>


