
<%= form_for(Channel.new) do |f| %>
  <ul id="channel_form">
    <div class="channel_parameters">
      <div class="style_inner">
        <li class="field">
          <%= f.label :style %><br />
          <%= f.select(:style, Channel::STYLE_OPTIONS) %>   
          <div class="picker" id="style_picker">
              <% Channel::STYLE_OPTIONS.each do |style| %>
             <div class="option" id="Style<%=style%>"><span><%= style %></span></div>
            <% end %>
          </div>
        </li>
      </div>
      <div class="price_inner">
        <li class="field">
          <%= f.label :price, "Price limit" %><br />
          <%= f.select(:price, Channel::PRICE_OPTIONS) %>  
          <div class="picker">
              <% Channel::PRICE_OPTIONS.each do |price| %>
             <div class="option" id="Under<%=price%>"><span><%= price %></span></div>
            <% end %>
          </div> 
        </li>
      </div>
      <div class="gender_inner">
        <li class="field">
          <%= f.label :gender %><br />
          <%= f.select(:gender, Channel::GENDER_OPTIONS) %>  
          <div class="picker">
              <% Channel::GENDER_OPTIONS.each do |gender| %>
             <div class="option" id="<%=gender%>"><span><%= gender %></span></div>
            <% end %>
          </div> 
        </li>
      </div>
      <div class="color_inner">
        <li class="field">
          <%= f.label :color %><br />
          <%= f.select(:color, Channel::COLOR_OPTIONS) %>
          <div class="picker">
              <% Channel::COLOR_OPTIONS.each do |color| %>
             <div class="option" id="Color<%=color%>"><%= color%></div>
            <% end %>
          </div>
        </li> 
      </div>
    </div>
  </ul>
  <div class="actions" align=center>
      <%= f.submit "Build this Path", :id => "make_channel" %>
    </div>
<% end %>


